<%- include('includes/header') %>
  
<div class="container py-md-5 container--narrow">

  <%- include('includes/flash') %>

  <a class="small font-weight-bold" href="/item/<%= item._id %>">&laquo; Back to item permalink</a>

  <form class="mt-3" action="/item/<%= item._id %>/edit" method="POST">
    <div class="form-group">
      <label for="item-title" class="text-muted mb-1"><small>Title</small></label>
      <input required name="title" value="<%= item.title %>" id="item-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
    </div>

    <div class="form-group">
      <label for="item-body" class="text-muted mb-1"><small>Body Content</small></label>
      <textarea required name="body" id="item-body" class="body-content tall-textarea form-control" type="text"><%= item.body %></textarea>
    </div>
    
    <button class="btn btn-primary">Save Updates</button>
  </form>
</div>

<%- include('includes/footer') %>